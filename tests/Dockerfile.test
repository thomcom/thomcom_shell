FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    git git-lfs curl sudo bzip2 ca-certificates \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

USER testuser
WORKDIR /home/testuser

COPY --chown=testuser:testuser . /home/testuser/.thomcom_shell/

# Run full tier install in docker mode
RUN cd /home/testuser/.thomcom_shell && timeout 600 bash install.sh --tier full --docker || true

# Run the test suite
RUN cd /home/testuser/.thomcom_shell/tests && bash test_suite.sh || echo "Tests completed with warnings"

CMD ["/bin/bash", "-l"]
